# Environment
NODE_ENV=development

# Auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secret

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/routopia?schema=public"

# Redis Configuration
REDIS_ENDPOINT=localhost
REDIS_PORT=6379
REDIS_TTL=3600
REDIS_PASSWORD=

# AWS Configuration
AWS_REGION=us-east-2
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# AWS Buckets
AWS_USER_CONTENT_BUCKET=routopia-user-content
AWS_USER_AVATARS_BUCKET=routopia-user-avatars
AWS_ROUTE_DATA_BUCKET=routopia-route-data
AWS_ACTIVITY_DATA_BUCKET=routopia-activity-data

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_key

# OpenWeatherMap
OPENWEATHER_API_KEY=your_openweather_key

# AI Configuration
CLAUDE_API_KEY=your_claude_key
MCP_MODEL_VERSION=claude-3-opus-20240229
MCP_MAX_TOKENS=4096
MCP_TIMEOUT=60000

# Feature Flags
ENABLE_REALTIME_UPDATES=true
ENABLE_POI_SUGGESTIONS=true
ENABLE_PARALLEL_TESTING=true
ENABLE_CHATGPT_FALLBACK=true
ENABLE_WEATHER_ROUTING=true

# Migration Settings
MIGRATION_BATCH_SIZE=50
MIGRATION_TIMEOUT=60000

# Monitoring
ENABLE_TELEMETRY=true
METRICS_INTERVAL=30000
ERROR_THRESHOLD=0.2

# Logging
LOG_LEVEL=debug
ENABLE_DEBUG_LOGGING=true

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=50

# Cache Configuration
CACHE_MAX_SIZE=1000000
CACHE_CLEANUP_INTERVAL=300