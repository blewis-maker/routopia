# Database
DATABASE_URL="postgresql://user:password@localhost:5432/routopia"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"
AUTH_SECRET="your-auth-secret"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

APPLE_ID="your-apple-id"
APPLE_SECRET="your-apple-secret"

# Email Configuration
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email-user"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_SERVER_SECURE="false"
EMAIL_FROM="noreply@routopia.com"

# Application Settings
NODE_ENV="development"
APP_NAME="Routopia"
APP_URL="http://localhost:3000"
API_URL="http://localhost:3000/api"

# Security
JWT_SECRET="your-jwt-secret"
COOKIE_SECRET="your-cookie-secret"
PASSWORD_SALT_ROUNDS="10"

# Redis (for session storage)
REDIS_URL="redis://localhost:6379"

# Feature Flags
ENABLE_SOCIAL_LOGIN="true"
ENABLE_EMAIL_VERIFICATION="true"
ENABLE_PASSWORD_RESET="true"
ENABLE_APPLE_LOGIN="true"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
ANALYTICS_ID="your-analytics-id"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS="100"

# Cache Settings
CACHE_TTL="3600"
MAX_CACHE_SIZE="1000000"

# Logging
LOG_LEVEL="debug"
LOG_FORMAT="json"

# API Keys (for external services)
MAPBOX_API_KEY="your-mapbox-api-key"
WEATHER_API_KEY="your-weather-api-key"
TRAFFIC_API_KEY="your-traffic-api-key"

# Storage
STORAGE_PROVIDER="local" # or "s3", "gcs"
STORAGE_BUCKET="your-storage-bucket"
STORAGE_REGION="your-storage-region"
STORAGE_ACCESS_KEY="your-storage-access-key"
STORAGE_SECRET_KEY="your-storage-secret-key" 